<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="The Most Famous Word"
            android:textColor="@color/black"
            android:textSize="52dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/choose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="48dp"
            android:text="Choose your Level"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/title"
            tools:layout_editor_absoluteX="0dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="516dp">

            <Button
                android:id="@+id/easy"
                android:layout_width="120dp"
                android:layout_height="46dp"
                android:layout_marginStart="144dp"
                android:layout_marginTop="80dp"
                android:text="EASY"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_yellow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/medium"
                android:layout_width="120dp"
                android:layout_height="46dp"
                android:layout_marginStart="144dp"
                android:layout_marginTop="80dp"
                android:text="MEDIUM"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_orange"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/easy" />

            <Button
                android:id="@+id/hard"
                android:layout_width="120dp"
                android:layout_height="46dp"
                android:layout_marginStart="144dp"
                android:layout_marginTop="80dp"
                android:text="HARD"
                android:textStyle="bold"
                android:background="@drawable/rounded_btn_red"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/medium" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>